<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="cliniquePU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entities -->
        <class>com.example.demo2.entity.User</class>
        <class>com.example.demo2.entity.Patient</class>
        <class>com.example.demo2.entity.Doctor</class>
        <class>com.example.demo2.entity.Department</class>
        <class>com.example.demo2.entity.Specialty</class>
        <class>com.example.demo2.entity.Availability</class>
        <class>com.example.demo2.entity.Appointment</class>
        <class>com.example.demo2.entity.MedicalNote</class>

        <properties>
            <!-- PostgreSQL Connection -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/clinique_digitale"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>

            <!-- Hibernate Properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Agroal Connection Pool (Default in Hibernate 6) -->
            <property name="hibernate.agroal.maxSize" value="10"/>
            <property name="hibernate.agroal.minSize" value="3"/>
            <property name="hibernate.agroal.acquisitionTimeout" value="PT20S"/>
            <property name="hibernate.agroal.reapTimeout" value="PT5M"/>
            <property name="hibernate.agroal.maxLifetime" value="PT20M"/>
            <property name="hibernate.agroal.leakTimeout" value="PT1M"/>
        </properties>
    </persistence-unit>
</persistence>
